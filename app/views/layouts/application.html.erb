<!DOCTYPE html>
<html>
  <head>
    <title>Raffle</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-1" aria-expanded="false">
            <span class="glyphicon glyphicon-chevron-down"></span>
        </div>

        <div class="collapse navbar-collapse" id="collapse-1">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li class="<%= 'active' if current_page?('/users') %>"><%= link_to "Home", users_url, class:"nav-link" %></li>
              <li class='<%= "active" if current_page?("/users/#{current_user.id}") %>'><%= link_to "Profile", user_url(current_user), class:"nav-link" %></li>
              <li class='<%= 'active' if current_page?('/users/edit')%>'><%= link_to "Settings", "/users/edit", class:"nav-link" %></li>
              <li><%= link_to "Logout", destroy_user_session_url, method: :delete, class:"nav-link" %></li>
            <% else %>
              <li class="<%= 'active' if current_page?('/users/sign_in') %>"><%= link_to "Login", new_user_session_url, class:"nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
